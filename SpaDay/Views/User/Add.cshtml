@{
}
@using SpaDay.ViewModels;
@model AddUserViewModel;

<h1>Sign Up Form</h1>

@if (ViewBag.error != null)
{
    <p>@ViewBag.error</p>
}

<form method="post" action="/user">

    
    @if (ViewBag.error == null)
                { 
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" />
            <span asp-validation-for="Username"></span>
        </div>
            
    }
    else
    {
        <div class="form-group">
            <label asp-for="Username">Username</label>
            <input asp-for="Username" value="@ViewBag.username" />
            <span asp-validation-for="Username"></span>
        </div>
    
    }


    @if (ViewBag.error == null)
    {
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
    }
    else
    {
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" value="@ViewBag.email" />
            <span asp-validation-for="Email"></span>
        </div>

    }


    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="VerifyPassword">Verify Password</label>
        <input type="password" asp-for="VerifyPassword" />
        <span asp-validation-for="VerifyPassword"></span>
    </div>

    <input type='submit' value='Submit'>
</form>
